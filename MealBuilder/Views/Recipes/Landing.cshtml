@model MealBuilder.ViewModels.RecipeLandingVm
@{
    ViewData["Title"] = $"{Model.Title} — Landing";
}

<div class="container py-3" data-bs-spy="scroll" data-bs-target="#landingNav" data-bs-smooth-scroll="true" tabindex="0">
    <nav id="landingNav" class="navbar navbar-expand-lg bg-transparent mb-3 border rounded">
        <div class="container py-2">
            <ul class="nav nav-pills justify-content-center gap-2">
                <li class="nav-item"><a class="nav-link" href="#overview">Overview</a></li>
                <li class="nav-item"><a class="nav-link" href="#ingredients">Ingredients</a></li>
                <li class="nav-item"><a class="nav-link" href="#nutrition">Nutrition</a></li>
            </ul>
        </div>
    </nav>

    <div data-bs-spy="scroll" data-bs-target="#landingNav" data-bs-smooth-scroll="true" tabindex="0"></div>
    <style>
        html {
            scroll-behavior: smooth;
        }

        :target {
            scroll-margin-top: 80px;
        }
    </style>


    <!-- Hero / Overview -->
    <section id="overview" class="position-relative">
        <div class="ratio ratio-21x9">
            <img src="@Model.ImageUrl" class="w-100 h-100 object-fit-cover" alt="@Model.Title" loading="lazy" />
        </div>
        <div class="position-absolute top-0 start-0 end-0 bottom-0 bg-dark opacity-50"></div>
        <div class="position-absolute top-50 start-50 translate-middle text-center text-white px-3">
            <span class="badge text-bg-primary mb-2 fs-5 px-3 py-2">@Model.Category</span>
            <h1 class="display-5 fw-bold">@Model.Title</h1>
            <p class="lead opacity-75">@Model.Description</p>
            <div class="d-flex gap-2 justify-content-center">
                <a class="btn btn-lg btn-primary" asp-controller="MealPlans" asp-action="Index">Add to Meal Plan</a>
                <a class="btn btn-lg btn-outline-light" href="#ingredients">See ingredients</a>
            </div>
        </div>
    </section>


    <!-- Ingredients -->
    <section id="ingredients" class="py-5 bg-light">
        <div class="container">
            <h2 class="h3 text-center mb-4">Ingredients</h2>
            @if (!Model.Ingredients.Any())
            {
                <p class="text-muted text-center">No ingredients yet.</p>
            }
            else
            {
                <div class="row g-3">
                    @foreach (var x in Model.Ingredients)
                    {
                        <div class="col-12 col-sm-6 col-lg-4">
                            <div class="card h-100 shadow-sm">
                                <div class="card-body d-flex align-items-center justify-content-between">
                                    <span class="fw-medium">@x.Name</span>
                                    <span class="badge text-bg-secondary">@x.Quantity @x.Unit</span>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
        </div>
    </section>


    <!-- Nutrition -->
    <section id="nutrition" class="py-5">
        <div class="container">
            <h2 class="h3 text-center mb-4">Nutrition</h2>
            <div class="row g-3">
                <div class="col-6 col-md-3">
                    <div class="card text-center shadow-sm">
                        <div class="card-body">
                            <div class="display-6">@(Model.Calories?.ToString() ?? "—")</div>
                            <div class="text-muted">Calories</div>
                        </div>
                    </div>
                </div>
                <div class="col-6 col-md-3">
                    <div class="card text-center shadow-sm">
                        <div class="card-body">
                            <div class="display-6">@Model.Category</div>
                            <div class="text-muted">Category</div>
                        </div>
                    </div>
                </div>
                <div class="col-6 col-md-3">
                    <div class="card text-center shadow-sm">
                        <div class="card-body">
                            <div class="display-6">@Model.UsedInMealPlansCount</div>
                            <div class="text-muted">In meal plans</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

</div>
