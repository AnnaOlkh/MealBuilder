@model IEnumerable<MealBuilder.Models.Recipe>

@{
    ViewData["Title"] = "Recipes";
}

<section class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <div>
            <h1 class="mb-1">Recipes</h1>
        </div>
        <a asp-action="Create" class="btn btn-primary">
            + Create New
        </a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            There are no recipes yet. Click <strong>Create New</strong> to add your first one.
        </div>
    }
    else
    {
        <div class="table-responsive shadow-sm rounded">
            <table class="table table-striped table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th style="width: 10%;">Image</th>
                        <th style="width: 20%;">
                            @Html.DisplayNameFor(m => m.First().Title)
                        </th>
                        <th style="width: 30%;">
                            @Html.DisplayNameFor(m => m.First().Description)
                        </th>
                        <th style="width: 15%;">
                            @Html.DisplayNameFor(m => m.First().Category)
                        </th>
                        <th style="width: 10%;">
                            @Html.DisplayNameFor(m => m.First().Calories)
                        </th>
                        <th style="width: 15%;" class="text-end">
                            Actions
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @if (!string.IsNullOrWhiteSpace(item.ImageUrl))
                                {
                                    <img src="@item.ImageUrl"
                                         alt="@item.Title"
                                         class="img-thumbnail"
                                         style="width: 80px; height: 80px; object-fit: cover;" />
                                }
                                else
                                {
                                    <div class="border rounded d-flex align-items-center justify-content-center text-muted"
                                         style="width: 80px; height: 80px; font-size: 0.8rem;">
                                        No image
                                    </div>
                                }
                            </td>
                            <td class="fw-semibold">
                                @Html.DisplayFor(modelItem => item.Title)
                            </td>
                            <td>
                                @if (!string.IsNullOrWhiteSpace(item.Description))
                                {
                                    <span class="d-inline-block text-truncate" style="max-width: 320px;">
                                        @item.Description
                                    </span>
                                }
                                else
                                {
                                    <span class="text-muted">No description</span>
                                }
                            </td>
                            <td>
                                <span class="badge bg-secondary">
                                    @Html.DisplayFor(modelItem => item.Category)
                                </span>
                            </td>
                            <td>
                                @if (item.Calories.HasValue)
                                {
                                    <span>@item.Calories kcal</span>
                                }
                                else
                                {
                                    <span class="text-muted">N/A</span>
                                }
                            </td>
                            <td class="text-end">
                                <div class="btn-group btn-group-sm" role="group">
                                    <a asp-action="ManageIngredients" asp-route-id="@item.Id"
                                       class="btn btn-outline-secondary">
                                        Ingredients
                                    </a>
                                    <a asp-action="Landing" asp-route-id="@item.Id"
                                       class="btn btn-outline-info">
                                        Details
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@item.Id"
                                       class="btn btn-outline-primary">
                                        Edit
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.Id"
                                       class="btn btn-outline-danger">
                                        Delete
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</section>
