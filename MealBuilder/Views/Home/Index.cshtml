@{
    ViewData["Title"] = "MealBuilder";
}

<div class="container d-flex flex-column flex-grow-1 justify-content-center align-items-center py-5">

    <div class="text-center mb-5">
        <h1 class="display-4 fw-bold text-dark">MealBuilder</h1>

        <p class="lead text-muted mt-3">
            Plan your meals. Save your recipes.
        </p>
    </div>

    <div class="row w-100 justify-content-center">
        <div class="col-sm-10 col-md-8 col-lg-5">
            <div class="card shadow-lg border-0 rounded-3">
                <div class="card-body p-4 p-md-5 text-center">

                    @if (User?.Identity?.IsAuthenticated ?? false)
                    {
                        <div class="d-grid gap-3">
                            <a asp-controller="Recipes" asp-action="Index" class="btn btn-primary btn-lg">
                                Recipes
                            </a>
                            <a asp-controller="MealPlans" asp-action="Index" class="btn btn-outline-secondary btn-lg">
                                Meal Plans
                            </a>
                        </div>
                    }
                    else
                    {
                        <p class="mb-4 text-dark fw-semibold">
                            Sign in to get started.
                        </p>

                        <a asp-controller="Auth" asp-action="Login" class="btn btn-success btn-lg w-100">
                            Sign in with Google
                        </a>
                    }

                </div>
            </div>
        </div>
    </div>
</div>