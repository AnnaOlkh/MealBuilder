@{
    ViewData["Title"] = "MealBuilder";
}

<div class="min-vh-100 d-flex flex-column justify-content-center">
    <div class="text-center mb-4">
        <h1 class="display-4 fw-bold">MealBuilder</h1>
        <p class="lead text-muted">
            Плануй харчування та зберігай улюблені рецепти в одному місці.
        </p>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-10 col-lg-8">
            <div class="card shadow-sm border-0">
                <div class="card-body p-4 p-md-5 text-center">

                    @if (User?.Identity?.IsAuthenticated ?? false)
                    {
                        <a asp-controller="Recipes" asp-action="Index" class="btn btn-primary me-2">
                            Перейти до рецептів
                        </a>
                        <a asp-controller="MealPlans" asp-action="Index" class="btn btn-outline-secondary">
                            Мої плани харчування
                        </a>
                    }
                    else
                    {
                        <p class="text-muted mb-4">
                            Увійди, щоб зберігати свої рецепти та плани харчування.
                        </p>

                        <a asp-controller="Auth" asp-action="Login" class="btn btn-primary">
                            Увійти з Google
                        </a>
                    }

                </div>
            </div>
        </div>
    </div>
</div>
